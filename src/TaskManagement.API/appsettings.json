{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Database": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "TaskManagement",
    "TasksCollectionName": "tasks",
    "UsersCollectionName": "users"
  },
  "RabbitMq": {
    "Host": "localhost",
    "Port": 5672,
    "Username": "taskuser",
    "Password": "taskpass",
    "VirtualHost": "/"
  },
  "Smtp": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "Username": "your-email@gmail.com",
    "Password": "your-app-password",
    "FromEmail": "your-email@gmail.com",
    "FromName": "Task Management System",
    "EnableSsl": true
  },
  "Jwt": {
    "SecretKey": "this-is-a-very-long-secret-key-for-jwt-token-generation-and-validation-12345",
    "Issuer": "TaskManagement.API",
    "Audience": "TaskManagement.Frontend",
    "ExpirationMinutes": 1440
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "ChannelPrefix": "TaskManagement"
  }
}
